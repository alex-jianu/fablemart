<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Acebook - Sign Up</title>
        <script
            src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
        <link href="../stylesheets/signup.css" rel="stylesheet" />

        <script>
            window.onload = function() {
                const passwordField = document.querySelector('#password');
                const changeColour = document.querySelector('#change-colour');
                const submitButton = document.querySelector('#submit');
                passwordField.addEventListener('focus', function() {
                    changeColour.style.color = 'red';
                });
                passwordField.addEventListener('blur', function() {
                    changeColour.style.color = 'black';
                });

                passwordField.addEventListener('input', function() {
                    if (passwordField.value.length >= 8 && passwordField.value.length <= 32) {
                        passwordField.setCustomValidity('');
                        changeColour.style.color = 'green';
                        submitButton.disabled = false;
                    } else {
                        passwordField.setCustomValidity('Password must be between 8 and 32 characters');
                        changeColour.style.color = 'red';
                        submitButton.disabled = true;
                    }
                });
            };
        </script>

    </head>
    <body>
        <header>
            <span class="site_logo">
                <a href="/posts">
                    <img src="/images/logo trial 3.png" alt="Acebook"
                        height="50" />
                </a>
            </span>
            <span class="login-signup">
                <a href="/">Home</a>
                <span class="larger">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
                <a href="/sessions/new">Log In</a>
            </span>
        </header>
        <form id="new-user-form" class="col-6 col-s-ß7 col-xs-8" action="/users"
            method="post">
            <div class="user-inputs">
                <div class="username-field">
                    <label for="username">Username: </label>
                    <input
                        id="username"
                        type="text"
                        name="username"
                        title="LowerCase and special chars(.$@£_%!?&)"
                        minlength="4"
                        maxlength="15"
                        pattern="^[a-z]+[a-z0-9.$@£_%!?&]+$"
                        required
                        />
                </div>
                <div class="email-field">
                    <label for="email">Email: </label>
                    <input
                        id="email"
                        type="email"
                        title="LowerCase Only"
                        name="email"
                        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
                        required
                        />
                </div>
                <div class="password-field">
                    <label for="password">Password: </label>
                    <input
                        id="password"
                        title="8-32 Characters, 1 UpperCase, 1 LowerCase, 1 Digit, 1 Special Character"
                        type="password"
                        name="password"
                        pattern="^(?:(?:(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z]))|(?:(?=.*[a-z])(?=.*[A-Z])(?=.*[*.!@$%^&(){}[]:;<>,.?/~_+-=|\]))|(?:(?=.*[0-9])(?=.*[A-Z])(?=.*[*.!@$%^&(){}[]:;<>,.?/~_+-=|\]))|(?:(?=.*[0-9])(?=.*[a-z])(?=.*[*.!@$%^&(){}[]:;<>,.?/~_+-=|\]))).{8,32}$"
                        required/>
                        </div>
                        <div>
                            <p id="change-colour">Must contain between 8-32 characters</p>
                            <p id="change-colour">Must contain between 8-32 characters</p>
                            <p id="change-colour">Must contain between 8-32 characters</p>
                            <p id="change-colour">Must contain between 8-32 characters</p>
                        </div>
                    </div>

                    <input id="submit" type="submit" value="Submit" />
                </form>
            </body>
            <footer>Acebook™ in partnership with Eta™</footer>
        </html>