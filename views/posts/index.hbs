<!DOCTYPE html>
<html>
  <head>
    <script
      src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <link rel='stylesheet' href='/stylesheets/posts-index.css' />
  </head>

  <body>

    <header>
      <span class="site_logo">
        <img src="images/logo trial 3.png" alt="Acebook" height="50">
      </span>
      <span class="larger">
        <a href="/posts/new">New post</a>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <form action="/sessions?_method=DELETE" method="POST">
          <input class="logout" type="submit" value="Log Out">
        </form>
      </span>
    </header>
    <div class="content">
      <h1>Timeline</h1>

      <div class="posts">

        {{#each posts}}
        <div class="post">
          <div class="title">
            <span class="user-pic">
              <div class="profile-photo"></div>
              <div class="author">{{this.author}}
              </div>
            </span>

            <span class="request">
              <p>Request</p>
            </span>
          </div>
          <p>{{this.message}}</p>
          <div class="likes-comments">
            <div class="likes">
              <p>{{this.likes}} Likes</p>
              <p>Like</p>
            </div>
            <div class="comments">
              <p>Comment</p>
            </div>
          </div>
        </div>
        {{/each}}


      </div>

    </div>


  </body>

</html>
